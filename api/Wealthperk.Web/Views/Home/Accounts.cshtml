@model Wealthperk.Web.ViewModels.UserAccount

@{
    ViewData["Title"] = "Manage accounts";
}
<h2>Manage accounts for the user</h2>

<form class="row" method="post" action="/api/account/accounts" enctype="multipart/form-data">
    <div class="form-group">
        <div class="col-md-10">
            <label>Email:</label>
            @Html.TextBoxFor(x => x.username, new {@class="form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Account name:</label>
            @Html.TextBoxFor(x => x.accountname, new {@class="form-control"})
        </div>
    </div>
     <div class="form-group">
        <div class="col-md-10">
            <label>Upload series data:</label>
            <input type="file" name="file" />
        </div>
    </div>
     <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Submit" />
        </div>
    </div>
</form>