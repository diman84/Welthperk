{
    "family": "${ECS_TASK}",
    "networkMode": "bridge",
    "containerDefinitions": [
         {
            "image": "${AWS_ECS_REPO_DOMAIN}/${IMAGE_NAME_REACT}:${IMAGE_VERSION}",
            "name": "${IMAGE_NAME_REACT}",
            "cpu": 128,
            "memory": 256,
            "essential": true,           
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "VIRTUAL_HOST",
                    "value": "api.${AWS_VIRTUAL_HOST}"
                }
            ]
        }
    ]
}