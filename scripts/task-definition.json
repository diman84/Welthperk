{
    "family": "${ECS_TASK}",
    "networkMode": "bridge",
    "containerDefinitions": [
         {
            "image": "${AWS_ECS_REPO_DOMAIN}/${IMAGE_NAME_REACT}:${IMAGE_VERSION}",
            "name": "${IMAGE_NAME_REACT}",
            "cpu": 128,
            "memory": 256,
            "essential": true,
            "links": ["${IMAGE_NAME_API}"],
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "VIRTUAL_HOST",
                    "value": "${AWS_VIRTUAL_HOST}"
                },
                 {
                    "name": "APIHOST",
                    "value": "${AWS_INTERNAL_HOST}"
                }                                                                                                                                           
            ]
        },
        {
            "image": "${AWS_ECS_REPO_DOMAIN}/${IMAGE_NAME_API}:${IMAGE_VERSION}",
            "name": "${IMAGE_NAME_API}",
            "cpu": 128,
            "memory": 256,
            "essential": true,           
            "portMappings": [
                {
                    "containerPort": 5000,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "VIRTUAL_HOST",
                    "value": "${AWS_INTERNAL_HOST}"
                },
                {
                    "name": "AWS_ACCESS_KEY_ID",
                    "value": "${AWS_APP_ACCESS_KEY_ID}"
                },
                {
                    "name": "AWS_SECRET_ACCESS_KEY",
                    "value": "${AWS_APP_SECRET_ACCESS_KEY}"
                }
            ]
         }
    ]
}